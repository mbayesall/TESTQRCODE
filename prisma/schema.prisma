// Schéma de base de données pour ENGY LABS Platform
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Utilisateurs et authentification
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          UserRole  @default(USER)
  phone         String?
  company       String?
  position      String?
  emailVerified DateTime?
  image         String?
  locale        String    @default("fr")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  subscriptions Subscription[]
  enrollments   Enrollment[]
  testimonials  Testimonial[]
  orders        Order[]
  sessions      Session[]

  @@index([email])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum UserRole {
  USER
  ADMIN
  TRAINER
}

// Formations
model Formation {
  id              String           @id @default(cuid())
  title           String
  titleEn         String?
  slug            String           @unique
  description     String           @db.Text
  descriptionEn   String?          @db.Text
  shortDesc       String
  shortDescEn     String?
  category        FormationCategory
  type            FormationType
  level           FormationLevel
  duration        Int              // En heures
  price           Float
  discountPrice   Float?
  maxParticipants Int
  language        String[]
  objectives      String[]
  prerequisites   String[]
  program         Json             // Programme détaillé
  image           String
  isActive        Boolean          @default(true)
  isFeatured      Boolean          @default(false)
  sector          Sector[]         // Education, Santé, Entrepreneuriat
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  // Relations
  sessions    FormationSession[]
  enrollments Enrollment[]
  reviews     Review[]

  @@index([slug])
  @@index([category])
  @@index([type])
}

enum FormationCategory {
  AI
  DATA_GOVERNANCE
  CYBERSECURITY
  DIGITAL_TRANSFORMATION
}

enum FormationType {
  FORMATION      // Formation complète
  WORKSHOP       // Atelier pratique
  TEAMBUILDING   // Team building
}

enum FormationLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum Sector {
  EDUCATION
  HEALTH
  ENTREPRENEURSHIP
  PUBLIC
  PRIVATE
}

// Sessions de formation (événements programmés)
model FormationSession {
  id              String    @id @default(cuid())
  formationId     String
  formation       Formation @relation(fields: [formationId], references: [id], onDelete: Cascade)
  startDate       DateTime
  endDate         DateTime
  location        String    // Adresse ou "En ligne"
  isOnline        Boolean   @default(false)
  meetingLink     String?
  trainers        String[]  // IDs des formateurs
  maxParticipants Int
  currentEnrolled Int       @default(0)
  status          SessionStatus @default(SCHEDULED)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  enrollments Enrollment[]

  @@index([formationId])
  @@index([startDate])
}

enum SessionStatus {
  SCHEDULED
  ONGOING
  COMPLETED
  CANCELLED
}

// Inscriptions aux formations
model Enrollment {
  id              String           @id @default(cuid())
  userId          String
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  formationId     String
  formation       Formation        @relation(fields: [formationId], references: [id], onDelete: Cascade)
  sessionId       String?
  session         FormationSession? @relation(fields: [sessionId], references: [id])
  status          EnrollmentStatus @default(PENDING)
  paymentStatus   PaymentStatus    @default(PENDING)
  amount          Float
  certificateUrl  String?
  progress        Int              @default(0) // Pourcentage de complétion
  completedAt     DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([userId])
  @@index([formationId])
  @@index([sessionId])
  @@unique([userId, sessionId])
}

enum EnrollmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

// Abonnements
model Subscription {
  id              String             @id @default(cuid())
  userId          String
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan            SubscriptionPlan   @relation(fields: [planId], references: [id])
  planId          String
  status          SubscriptionStatus @default(ACTIVE)
  stripeCustomerId String?           @unique
  stripeSubscriptionId String?       @unique
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean         @default(false)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@index([userId])
  @@index([planId])
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  PAST_DUE
}

// Plans d'abonnement
model SubscriptionPlan {
  id              String   @id @default(cuid())
  name            String
  nameEn          String?
  slug            String   @unique
  description     String
  descriptionEn   String?
  price           Float
  interval        String   // monthly, quarterly, yearly
  features        String[] // Liste des avantages
  maxFormations   Int      // Nombre de formations incluses
  discountPercent Float?   // Réduction sur les formations supplémentaires
  isActive        Boolean  @default(true)
  stripePriceId   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  subscriptions Subscription[]

  @@index([slug])
}

// Commandes / Paiements
model Order {
  id              String        @id @default(cuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  orderNumber     String        @unique
  items           Json          // Détails des items achetés
  subtotal        Float
  tax             Float         @default(0)
  total           Float
  currency        String        @default("XOF") // Franc CFA
  paymentMethod   PaymentMethod
  paymentStatus   PaymentStatus @default(PENDING)
  stripePaymentId String?
  metadata        Json?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([userId])
  @@index([orderNumber])
}

enum PaymentMethod {
  STRIPE
  WAVE
  ORANGE_MONEY
  FREE_MONEY
  BANK_TRANSFER
}

// Témoignages
model Testimonial {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content     String   @db.Text
  contentEn   String?  @db.Text
  rating      Int      // 1-5
  company     String?
  position    String?
  isPublished Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([isPublished])
}

// Avis sur les formations
model Review {
  id          String    @id @default(cuid())
  formationId String
  formation   Formation @relation(fields: [formationId], references: [id], onDelete: Cascade)
  userName    String
  rating      Int       // 1-5
  comment     String    @db.Text
  isVerified  Boolean   @default(false)
  isPublished Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([formationId])
  @@index([isPublished])
}

// Blog / Actualités
model BlogPost {
  id            String   @id @default(cuid())
  title         String
  titleEn       String?
  slug          String   @unique
  excerpt       String
  excerptEn     String?
  content       String   @db.Text
  contentEn     String?  @db.Text
  coverImage    String
  author        String
  authorImage   String?
  category      String
  tags          String[]
  isPublished   Boolean  @default(false)
  publishedAt   DateTime?
  viewCount     Int      @default(0)
  readTime      Int      // En minutes
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([slug])
  @@index([isPublished])
  @@index([category])
}

// FAQ
model FAQ {
  id          String   @id @default(cuid())
  question    String
  questionEn  String?
  answer      String   @db.Text
  answerEn    String?  @db.Text
  category    String
  order       Int      @default(0)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([isPublished])
}

// Demandes de devis personnalisés
model QuoteRequest {
  id          String      @id @default(cuid())
  name        String
  email       String
  phone       String
  company     String?
  sector      Sector?
  message     String      @db.Text
  trainingType String[]   // Types de formations demandées
  participants Int?
  budget      String?
  status      QuoteStatus @default(PENDING)
  notes       String?     @db.Text
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([email])
  @@index([status])
}

enum QuoteStatus {
  PENDING
  CONTACTED
  QUOTED
  ACCEPTED
  REJECTED
}

// Messages de contact
model ContactMessage {
  id        String        @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String        @db.Text
  status    MessageStatus @default(NEW)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([email])
  @@index([status])
}

enum MessageStatus {
  NEW
  READ
  REPLIED
  ARCHIVED
}

// Newsletter
model NewsletterSubscriber {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String?
  isActive    Boolean  @default(true)
  locale      String   @default("fr")
  subscribedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([email])
}
